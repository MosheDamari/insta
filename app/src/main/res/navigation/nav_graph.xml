<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/feed"
        android:name="com.app.insta.feed_fragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feed_to_share"
            app:destination="@id/share" />
        <action
            android:id="@+id/action_feed_to_profile"
            app:destination="@id/profile" />
    </fragment>
    <fragment
        android:id="@+id/share"
        android:name="com.app.insta.share_fragment"
        android:label="fragment_share"
        tools:layout="@layout/fragment_share" >
        <action
            android:id="@+id/action_share_to_profile"
            app:destination="@id/profile" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.app.insta.profile_fragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_to_share"
            app:destination="@id/share" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.app.insta.login_fragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_feed"
            app:destination="@id/feed" />
    </fragment>
</navigation>