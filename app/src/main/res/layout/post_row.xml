<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="83dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/postAuthor"
        android:layout_width="203dp"
        android:layout_height="33dp"
        android:layout_marginTop="23dp"
        android:text="@string/postAuthor"
        app:layout_constraintEnd_toStartOf="@+id/authorImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/postAuthor" />

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="320dp"
        android:layout_height="408dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postAuthor"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/postText"
        android:layout_width="308dp"
        android:layout_height="129dp"
        android:layout_marginTop="24dp"
        android:text="@string/postText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postImage"
        tools:text="@string/postText" />
</androidx.constraintlayout.widget.ConstraintLayout>